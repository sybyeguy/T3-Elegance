// packages/client/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      // 方便导入后端类型
      "@server/*": ["../server/src/*"] 
    }
  },
  "include": ["src/**/*"],
  "references": [
    {"path": "../common"},
    {"path": "../server"} // 引用后端包的类型定义
  ]
}